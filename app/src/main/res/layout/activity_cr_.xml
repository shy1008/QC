<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CR_Activity"
    android:id="@+id/cr_linear">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#F2695C"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/leftmenu"
                android:id="@+id/left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:textColor="#FDFBFB"
                android:text="Challenge registration"
                android:fontFamily="@font/cabin_regular"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ECDDC7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 챌린지명을 입력해 주세요."
                android:fontFamily="@font/nanumpenscript_regular"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:layout_margin="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="챌린지명"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:background="@drawable/border_radius4"
                android:id="@+id/chname"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 챌린지 내용을 입력해 주세요."
                android:fontFamily="@font/nanumpenscript_regular"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:layout_margin="20dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:background="@drawable/border_radius4"
                android:hint="내용"
                android:gravity="top"
                android:id="@+id/chtext"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 등록"
            android:textSize="23dp"
            android:fontFamily="@font/nanumpenscript_regular"
            android:layout_gravity="center"
            android:background="@drawable/borderbox1"
            android:layout_marginTop="20dp"
            android:id="@+id/res"/>



    </LinearLayout>



</LinearLayout>